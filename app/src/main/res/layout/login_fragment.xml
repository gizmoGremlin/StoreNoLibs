<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.LoginFragment">

    <TextView
            android:id="@+id/signin_txt_header"
            android:layout_centerHorizontal="true"
            android:paddingTop="28dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"/>
    <TextView
            android:id="@+id/signin_welcome_text"
            android:layout_centerHorizontal="true"
            android:paddingTop="6dp"
            android:layout_below="@+id/signin_txt_header"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"/>
    <TextView
            android:id="@+id/signin_email_header"
            android:layout_below="@+id/signin_welcome_text"
            android:layout_marginTop="44dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
    <EditText
            android:layout_marginTop="8dp"
            android:layout_below="@+id/signin_email_header"
            android:id="@+id/signin_email_edittext"
            android:layout_width="match_parent"
            android:hint="email"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/signin_password_header"
            android:layout_below="@+id/signin_email_edittext"
            android:layout_marginTop="8dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"/>
    <EditText
            android:layout_marginTop="8dp"
            android:layout_below="@+id/signin_password_header"
            android:id="@+id/signin_password_edittext"
            android:layout_width="match_parent"
            android:hint="password"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/signin_button_login_frag"
            android:text="Sign In"
            android:layout_marginBottom="44dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>