<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:src="@android:color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/category_image"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    <TextView
            android:id="@+id/category_slogan"
            android:text="this is a slogan"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="56sp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:textAlignment="gravity"
            android:width="0dp"
            android:ellipsize="none"
            android:maxLines="2"

            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/category_image"
            android:layout_alignBottom="@+id/category_image"

            android:layout_height="wrap_content" android:fontFamily="@font/righteous"/>
</RelativeLayout>